
@{
    ViewBag.Title = "CompletedTaskList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CompletedTaskList</h2>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-list"></i>Task List</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Task</th>
                                <th scope="col">Description</th>
                                <th scope="col">IsCompleted</th>
                                <th scope="col">IsChecked</th>
                                <th scope="col">Update</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OrnekToDoList.Models.tbl_todolist item in ViewBag.Liste)
                            {
                                string Delete = "Sil" + item.Id;
                                <tr>
                                    <td scope="row">@item.Id</td>
                                    <td scope="row">@item.Title</td>
                                    <td scope="row">@item.Description</td>
                                    <td scope="row">@item.IsCompleted</td>
                                    <td scope="row">Completed</td>
                                    <td scope="row">
                                        <button class="btn btn-info ">
                                            @Html.ActionLink("Incompleted", "Incomplete", new { Id = item.Id })
                                        </button>
                                    </td>
                                    <td scope="row">
                                        <button class="btn btn-danger" data-toggle="modal" data-target="#@Delete">
                                            Delete
                                            <i class="fa fa-trash"></i>
                                        </button>
                                        <div class="modal fade" id="@Delete">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content border-danger">
                                                    <div class="modal-header bg-danger">
                                                        <h5 class="modal-title text-white">Görev Kalıcı Olarak Silinecek</h5>
                                                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="form-group col-lg-12">
                                                            <label>Title</label>
                                                            <input type="text" class="form-control" value="@item.Title" name="Title" readonly>
                                                        </div>
                                                        <div class="form-group col-lg-12">
                                                            <label>Description</label>
                                                            <textarea rows="4" class="form-control" id="basic-textarea" name="Description" readonly>@item.Description</textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-dark" data-dismiss="modal"><i class="fa fa-times"></i> Close </button>
                                                        <a href="/Home/Sil/@item.Id" class="btn btn-danger">
                                                            <i class="fa fa-trash"></i> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
